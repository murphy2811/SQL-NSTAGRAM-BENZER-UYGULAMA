<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@drawable/shape1"/>

        <TextView
            android:id="@+id/t1"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Kings for Queens"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/king"
            tools:ignore="NotSibling"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/shape1">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/panelim"
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape3">
        <EditText
            android:id="@+id/kullaniciAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:textSize="21sp"
            android:hint="Kullanıcı Adı :"
            android:drawableRight="@drawable/baseline_person_24"
            android:inputType="textPersonName"/>
        <EditText
            android:id="@+id/kullaniciSifre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="30dp"
            android:textSize="21sp"
            android:hint="Şifre :"
            android:inputType="textPassword"
            android:drawableRight="@drawable/baseline_vpn_key_24"/>

        <Button
            android:id="@+id/butongiris"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="65dp"
            android:text="Giriş"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:backgroundTint="#5E4DF6"/>

        <Button
            android:id="@+id/Kaydol"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/butongiris"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#ED0621"
            android:text="Kaydol"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/instagram"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="190dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/google"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="120dp"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="260dp"
        android:src="@drawable/facebook" />
    />

</RelativeLayout>